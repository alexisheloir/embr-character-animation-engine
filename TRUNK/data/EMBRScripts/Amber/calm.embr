# +++ CALM GESTURE +++
BEGIN K_POSE_SEQUENCE  # +++ HAND UNIT [RH] +++
  FADE_IN:200
  FADE_OUT:200
  CHARACTER:Amber
  START:asap
  TIME_WARP:EXP;3
  BEGIN K_POSE  # --- POSE 1 (REST)
   TIME_POINT:+100
   HOLD:0
   BEGIN POSITION_CONSTRAINT
     BODY_GROUP:rarm
     TARGET:-.3;-.2;-.4
     JOINT:rhand
     OFFSET:0.0;0.0;0.0
   END
   BEGIN POSITION_CONSTRAINT
     BODY_GROUP:larm
     TARGET:.3;-.2;-.4
     JOINT:lhand
     OFFSET:0.0;0.0;0.0
   END
  END
  BEGIN K_POSE  # --- POSE 2 (PREP)
   TIME_POINT:+600
   HOLD:200
