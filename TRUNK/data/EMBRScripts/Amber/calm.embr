     BODY_GROUP:rarm
     TARGET:-.2;-.15;.2
     JOINT:rhand
     OFFSET:0.0;0.0;0.0
   END
   BEGIN ORIENTATION_CONSTRAINT
     BODY_GROUP:rarm
     DIRECTION:0;-.8;-.5
     JOINT:rhand
   END
   BEGIN POSITION_CONSTRAINT
     BODY_GROUP:larm
     TARGET:.2;-.15;.2
     JOINT:lhand
     OFFSET:0.0;0.0;0.0
   END
   BEGIN ORIENTATION_CONSTRAINT
     BODY_GROUP:larm
     DIRECTION:0;-.8;-.5
     JOINT:lhand
   END
  END
