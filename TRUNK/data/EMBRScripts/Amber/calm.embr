     TARGET:-.2;-.2;.15
     JOINT:rhand
     OFFSET:0.0;0.0;0.0
   END
   BEGIN ORIENTATION_CONSTRAINT
     BODY_GROUP:rarm
     DIRECTION:0;-.7;-.5
     JOINT:rhand
   END
   BEGIN POSITION_CONSTRAINT
     BODY_GROUP:larm
     TARGET:.2;-.2;.15
     JOINT:lhand
     OFFSET:0.0;0.0;0.0
   END
   BEGIN ORIENTATION_CONSTRAINT
     BODY_GROUP:larm
     DIRECTION:0;-.7;-.5
     JOINT:lhand
   END
  END
  BEGIN K_POSE  # --- POSE 4 (REST)
   TIME_POINT:+1800
   HOLD:0
   BEGIN POSITION_CONSTRAINT
     BODY_GROUP:rarm
     TARGET:-.3;-.2;-.4
